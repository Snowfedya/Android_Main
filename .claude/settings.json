{
  "permissions": {
    "allow": [
      "mcp__acp__Bash",
      "mcp__acp__Write",
      "mcp__acp__Edit",
      "mcp__acp__Read",
      "mcp__4_5v_mcp__analyze_image",
      "mcp__web_reader__webReader"
    ]
  },
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp", "--api-key", "YOUR_API_KEY"]
    },
    "shadcn": {
      "command": "npx",
      "args": ["shadcn@latest", "mcp"]
    }
  }
}
