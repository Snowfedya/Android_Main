<navigation
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/nav_graph"
app:startDestination="@id/onboardFragment" >
<fragment
    android:id="@+id/onboardFragment"
    android:name="com.willpower.tracker.fragments.OnboardFragment"
    android:label="Onboard"
    tools:layout="@layout/fragment_onboard" >

    <action
        android:id="@+id/action_onboard_to_signIn"
        app:destination="@id/signInFragment"
        app:popUpTo="@id/onboardFragment"
        app:popUpToInclusive="false" />

</fragment>
<fragment
    android:id="@+id/signInFragment"
    android:name="com.willpower.tracker.fragments.SignInFragment"
    android:label="Sign In"
    tools:layout="@layout/fragment_sign_in" >

    <argument
        android:name="userName"
        android:defaultValue="@null"
        app:argType="string"
        app:nullable="true" />
    <argument
        android:name="userEmail"
        android:defaultValue="@null"
        app:argType="string"
        app:nullable="true" />

    <action
        android:id="@+id/action_signIn_to_signUp"
        app:destination="@id/signUpFragment" />
    <action
        android:id="@+id/action_signIn_to_home"
        app:destination="@id/homeFragment"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="true" />

</fragment>
<fragment
    android:id="@+id/signUpFragment"
    android:name="com.willpower.tracker.fragments.SignUpFragment"
    android:label="Sign Up"
    tools:layout="@layout/fragment_sign_up" >

    <action
        android:id="@+id/action_signUp_to_signIn"
        app:destination="@id/signInFragment"
        app:popUpTo="@id/signInFragment"
        app:popUpToInclusive="true" />

</fragment>
<fragment
    android:id="@+id/homeFragment"
    android:name="com.willpower.tracker.fragments.HomeFragment"
    android:label="Home"
    tools:layout="@layout/fragment_home" >

    <action
        android:id="@+id/action_home_to_details"
        app:destination="@id/detailsFragment" />

</fragment>
<fragment
    android:id="@+id/detailsFragment"
    android:name="com.willpower.tracker.fragments.DetailsFragment"
    android:label="Details"
    tools:layout="@layout/fragment_details" >

    <argument
        android:name="challengeId"
        app:argType="integer" />
    <argument
        android:name="challengeTitle"
        app:argType="string" />

</fragment>
</navigation>